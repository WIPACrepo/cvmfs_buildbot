{
    "apiVersion": "apps/v1beta1",
    "kind": "Deployment",
    "metadata": {
        "labels": {
            "app": "buildbot-worker",
            "name": "worker-cvmfs-centos7-stratum0"
        },
        "name": "worker-cvmfs-centos7-stratum0"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "app": "buildbot-worker",
                "name": "worker-cvmfs-centos7-stratum0"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "buildbot-worker",
                    "name": "worker-cvmfs-centos7-stratum0"
                }
            },
            "spec": {
                "containers": [
                    {
                        "env": [
                            {
                                "name": "BUILDMASTER",
                                "value": "cvmfs-buildbot-worker"
                            },
                            {
                                "name": "BUILDMASTER_PORT",
                                "value": "9989"
                            },
                            {
                                "name": "WORKERNAME",
                                "value": "cvmfs-centos7-stratum0"
                            },
                            {
                                "name": "WORKERPASS",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "worker_password",
                                        "name": "cvmfs-buildbot"
                                    }
                                }
                            }
                        ],
                        "image": "localhost:5000/icecube-buildbot-worker-cvmfs-centos7-stratum0:0.1.11",
                        "imagePullPolicy": "Always",
                        "name": "worker-cvmfs-centos7-stratum0",
                        "resources": {
                            "limits": {
                                "cpu": "1",
                                "memory": "1000Mi"
                            }
                        },
                        "securityContext": {
                            "capabilities": {
                                "add": [
                                    "SYS_ADMIN"
                                ]
                            },
                            "privileged": true
                        },
                        "volumeMounts": [
                            {
                                "mountPath": "/cvmfs-source",
                                "name": "cvmfs-buildbot-worker-shared-storage"
                            },
                            {
                                "mountPath": "/srv/cvmfs",
                                "name": "cvmfs-buildbot-stratum0-storage"
                            },
                            {
                                "mountPath": "/var/spool/cvmfs",
                                "name": "cvmfs-buildbot-stratum0-tmp-storage"
                            },
                            {
                                "mountPath": "/mnt/cvmfs_config",
                                "name": "cvmfs-buildbot-stratum0-config-storage"
                            },
                            {
                                "mountPath": "/dev/fuse",
                                "name": "fuse"
                            },
                            {
                                "mountPath": "/sys/fs/cgroup",
                                "name": "cgroup",
                                "readOnly": true
                            }
                        ]
                    }
                ],
                "ports": [
                    {
                        "containerPort": 80,
                        "name": "http",
                        "protocol": "TCP"
                    }
                ],
                "volumes": [
                    {
                        "cephfs": {
                            "monitors": [
                                "10.254.81.20:6790",
                                "10.254.109.34:6790",
                                "10.254.34.31:6790"
                            ],
                            "path": "/cvmfs",
                            "secretRef": {
                                "name": "rook-admin"
                            },
                            "user": "admin"
                        },
                        "name": "cvmfs-buildbot-worker-shared-storage"
                    },
                    {
                        "name": "cvmfs-buildbot-stratum0-storage",
                        "persistentVolumeClaim": {
                            "claimName": "cvmfs-buildbot-stratum0-pv-claim"
                        }
                    },
                    {
                        "name": "cvmfs-buildbot-stratum0-tmp-storage",
                        "persistentVolumeClaim": {
                            "claimName": "cvmfs-buildbot-stratum0-spool-pv-claim"
                        }
                    },
                    {
                        "name": "cvmfs-buildbot-stratum0-config-storage",
                        "persistentVolumeClaim": {
                            "claimName": "cvmfs-buildbot-stratum0-config-pv-claim"
                        }
                    },
                    {
                        "hostPath": {
                            "path": "/dev/fuse"
                        },
                        "name": "fuse"
                    },
                    {
                        "hostPath": {
                            "path": "/sys/fs/cgroup"
                        },
                        "name": "cgroup"
                    }
                ]
            }
        }
    }
}