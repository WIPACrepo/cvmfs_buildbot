{
    "apiVersion": "apps/v1beta1",
    "kind": "Deployment",
    "metadata": {
        "labels": {
            "app": "buildbot-worker",
            "name": "worker-cvmfs-centos7-build"
        },
        "name": "worker-cvmfs-centos7-build"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "app": "buildbot-worker",
                "name": "worker-cvmfs-centos7-build"
            }
        },
        "strategy": {
            "type": "Recreate"
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "buildbot-worker",
                    "name": "worker-cvmfs-centos7-build"
                }
            },
            "spec": {
                "containers": [
                    {
                        "env": [
                            {
                                "name": "BUILDMASTER",
                                "value": "cvmfs-buildbot-worker"
                            },
                            {
                                "name": "BUILDMASTER_PORT",
                                "value": "9989"
                            },
                            {
                                "name": "WORKERNAME",
                                "value": "cvmfs-centos7-build"
                            },
                            {
                                "name": "WORKERPASS",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "worker_password",
                                        "name": "cvmfs-buildbot"
                                    }
                                }
                            }
                        ],
                        "image": "localhost:5000/icecube-buildbot-worker-cvmfs-centos7-build:0.1.9",
                        "imagePullPolicy": "Always",
                        "name": "worker-cvmfs-centos7-build",
                        "ports": [],
                        "resources": {
                            "limits": {
                                "cpu": "4",
                                "memory": "8000Mi"
                            }
                        },
                        "volumeMounts": [
                            {
                                "mountPath": "/cvmfs",
                                "name": "cvmfs-buildbot-worker-shared-storage"
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "cephfs": {
                            "monitors": [
                                "ceph.icecube.wisc.edu"
                            ],
                            "path": "/k8s/buildbot-worker/cvmfs-buildbot-worker-shared-storage",
                            "secretRef": {
                                "name": "cephfs-secret"
                            },
                            "user": "k8s"
                        },
                        "name": "cvmfs-buildbot-worker-shared-storage"
                    }
                ]
            }
        }
    }
}